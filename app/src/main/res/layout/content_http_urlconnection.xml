<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.greg.web.HttpURLConnection"
    tools:showIn="@layout/activity_http_urlconnection"
    android:background="#c4e3cb">


    <ImageButton
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:id="@+id/deviceButton"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@drawable/technology"
        android:adjustViewBounds="false"
        android:background="#81ffffff"
        android:layout_rowWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnWeight="0"
        android:layout_gravity="left"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:id="@+id/statButton"
        android:layout_gravity="right|top"
        android:src="@drawable/graphic"
        android:background="#81ffffff"
        android:layout_above="@+id/deviceButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="76dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textStats"
        android:text="@string/accederStat"
        android:layout_above="@+id/statButton" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/saveMyDevice"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
